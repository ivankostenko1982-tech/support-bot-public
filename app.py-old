def _parse_id_list(raw: str) -> Set[int]:
    ids: Set[int] = set()
    if not raw or not raw.strip():
        return ids
    parts = [p for chunk in raw.replace(",", " ").split() for p in [chunk]]
    for p in parts:
        if "=" in p:
            log.warning("Ignoring non-id token in list: %r", p)
            continue
        try:
            ids.add(int(p))
        except ValueError:
            log.warning("Skipping malformed ID: %r", p)
    return ids

